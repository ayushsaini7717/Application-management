generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


model application{
  id String @default(uuid()) @unique
  Fname String
  Lname String
  email String
  mobile String
  resumelink String
  position String
  date String
  scheduled Boolean @default(false)
  pending Boolean @default(true)
}

model jobopenings{
  id String @default(uuid()) @unique
  title String
  department String
  location String
  type String
  short_desc String
  experience String
  full_desc String
  
  responsibility Responsibilities[]
  requirement Requirements[]
  benifit Benifits[]
  skill Skills[]
}

model Responsibilities{
  id String @default(uuid()) @unique
  responsibility String
  jobid String

  Job jobopenings @relation(fields: [jobid],references: [id],onDelete: Cascade)
}

model Requirements{
  id String @default(uuid()) @unique
  requirement String
  jobid String

  Job jobopenings @relation(fields: [jobid],references: [id],onDelete: Cascade)
}


model Benifits{
  id String @default(uuid()) @unique
  benifit String

  jobid String
  Job jobopenings @relation(fields: [jobid],references: [id],onDelete: Cascade)
}

model Skills{
  id String @default(uuid()) @unique
  Skill String

  jobid String
  Job jobopenings @relation(fields: [jobid],references: [id],onDelete: Cascade)
}
